{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
  ]
}